{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-fdiagnostics-color=always",

                // 源文件
                // "-g",
                "${file}",
                "${workspaceFolder}/src/dsarchive.c",
                "${workspaceFolder}/src/archive.c",
                "${workspaceFolder}/src/slinkxml.c",
                
                // include
                "-I${workspaceFolder}/src",
                "-I${workspaceFolder}/libslink",
                "-I${workspaceFolder}/ezxml",
                "-I/usr/local/include/hiredis",

                // libs dir
                "-L${workspaceFolder}/libslink",
                "-L${workspaceFolder}/ezxml",

                // libs
                "-lslink",
                "-lezxml",
                "-lhiredis",
                "-ljansson"

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}